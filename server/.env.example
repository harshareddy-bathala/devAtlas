# DevOrbit Server Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# FIREBASE SERVICE ACCOUNT (Required)
# ============================================
# Option 1: Provide the entire service account JSON as a single line
# Get from: Firebase Console → Project Settings → Service Accounts → Generate new private key
# Minify the JSON and paste it here (remove newlines)

FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# Option 2: For local development, you can instead place serviceAccountKey.json
# in the server folder (but NEVER commit this file!)

# ============================================
# SERVER CONFIGURATION (Required)
# ============================================

PORT=3001
NODE_ENV=development

# ============================================
# CORS CONFIGURATION (Required)
# ============================================
# Comma-separated list of allowed origins

CORS_ORIGIN=http://localhost:5173

# For production, use your frontend domain(s):
# CORS_ORIGIN=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ============================================
# RATE LIMITING
# ============================================
# Customize rate limiting (optional - defaults provided)

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200

# ============================================
# REDIS (Optional - for session/cache)
# ============================================
# If using Redis for caching or rate limiting

REDIS_URL=redis://localhost:6379

# For production (e.g., Redis Cloud, Upstash):
# REDIS_URL=redis://username:password@your-redis-host:6379

# ============================================
# LOGGING
# ============================================

LOG_LEVEL=info
