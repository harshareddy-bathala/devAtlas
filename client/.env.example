# DevOrbit Client Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# FIREBASE CLIENT CONFIGURATION (Required)
# ============================================
# Get these values from Firebase Console:
# Project Settings → General → Your apps → Web app → SDK setup and configuration

VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# ============================================
# API CONFIGURATION (Required)
# ============================================
# Backend API URL - use localhost for development

VITE_API_URL=http://localhost:3001/api

# For production, use your deployed backend URL:
# VITE_API_URL=https://your-backend-domain.com/api

# ============================================
# ERROR TRACKING - SENTRY (Optional)
# ============================================
# Get DSN from Sentry: Settings → Projects → [Your Project] → Client Keys (DSN)

VITE_SENTRY_DSN=https://your-sentry-key@sentry.io/project-id

# ============================================
# ANALYTICS - POSTHOG (Optional)
# ============================================
# Get these from PostHog: Project Settings → Project API Key

VITE_POSTHOG_KEY=phc_your_posthog_key_here
VITE_POSTHOG_HOST=https://app.posthog.com

# ============================================
# ENVIRONMENT
# ============================================
# Set to 'production' for production builds

VITE_ENV=development