@tailwind base;
@tailwind components;
@tailwind utilities;

/* CSS Variables for theming */
:root {
  /* Light mode colors */
  --color-bg: #f8fafc;
  --color-surface: #ffffff;
  --color-border: #e2e8f0;
  --color-text: #1e293b;
  --color-text-muted: #64748b;
  
  /* Toast colors */
  --toast-bg: #ffffff;
  --toast-color: #1e293b;
  --toast-border: #e2e8f0;
}

.dark {
  /* Dark mode colors */
  --color-bg: #0f1015;
  --color-surface: #1a1b23;
  --color-border: #2a2b35;
  --color-text: #ffffff;
  --color-text-muted: #9ca3af;
  
  /* Toast colors */
  --toast-bg: #1a1b23;
  --toast-color: #ffffff;
  --toast-border: #2a2b35;
}

@layer base {
  * {
    @apply border-border;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    @apply bg-light-100 text-gray-900 dark:bg-dark-900 dark:text-white antialiased;
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    @apply bg-transparent;
  }

  ::-webkit-scrollbar-thumb {
    @apply bg-gray-300 dark:bg-dark-600 rounded-full;
  }

  ::-webkit-scrollbar-thumb:hover {
    @apply bg-gray-400 dark:bg-dark-500;
  }

  /* Focus styles */
  :focus-visible {
    @apply outline-none ring-2 ring-accent-blue ring-offset-2 ring-offset-white dark:ring-offset-dark-900;
  }
}

@layer components {
  /* Glass morphism card */
  .glass-card {
    @apply bg-white/80 dark:bg-dark-800/80 backdrop-blur-xl rounded-xl border border-gray-200 dark:border-dark-600 shadow-lg;
  }

  /* Solid card */
  .card {
    @apply bg-white dark:bg-dark-800 rounded-xl border border-gray-200 dark:border-dark-600 shadow-sm;
  }

  /* Input field */
  .input-field {
    @apply w-full px-3 py-2.5 bg-gray-50 dark:bg-dark-700 border border-gray-200 dark:border-dark-500 rounded-lg text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500 focus:ring-2 focus:ring-accent-blue focus:border-transparent transition-all;
  }

  /* Primary button */
  .btn-primary {
    @apply px-4 py-2.5 bg-gradient-to-r from-accent-blue to-accent-purple hover:opacity-90 text-white font-medium rounded-lg transition-all shadow-lg shadow-accent-blue/25 hover:shadow-accent-blue/40 disabled:opacity-50 disabled:cursor-not-allowed;
  }

  /* Secondary button */
  .btn-secondary {
    @apply px-4 py-2.5 bg-gray-100 dark:bg-dark-700 hover:bg-gray-200 dark:hover:bg-dark-600 text-gray-900 dark:text-white border border-gray-200 dark:border-dark-500 font-medium rounded-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed;
  }

  /* Danger button */
  .btn-danger {
    @apply px-4 py-2.5 bg-red-500/10 hover:bg-red-500/20 text-red-500 border border-red-500/20 font-medium rounded-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed;
  }

  /* Ghost button */
  .btn-ghost {
    @apply px-4 py-2.5 hover:bg-gray-100 dark:hover:bg-dark-700 text-gray-600 dark:text-gray-300 font-medium rounded-lg transition-all disabled:opacity-50 disabled:cursor-not-allowed;
  }

  /* Badge */
  .badge {
    @apply inline-flex items-center px-2 py-0.5 text-xs font-medium rounded-full;
  }

  .badge-primary {
    @apply badge bg-accent-blue/10 text-accent-blue;
  }

  .badge-success {
    @apply badge bg-green-500/10 text-green-500;
  }

  .badge-warning {
    @apply badge bg-yellow-500/10 text-yellow-500;
  }

  .badge-error {
    @apply badge bg-red-500/10 text-red-500;
  }

  /* Progress bar */
  .progress-bar {
    @apply h-2 bg-gray-200 dark:bg-dark-600 rounded-full overflow-hidden;
  }

  .progress-bar-fill {
    @apply h-full bg-gradient-to-r from-accent-blue to-accent-purple transition-all duration-500;
  }

  /* Skeleton loader */
  .skeleton {
    @apply bg-gray-200 dark:bg-dark-700 rounded animate-pulse;
  }
}

@layer utilities {
  /* Text gradient */
  .text-gradient {
    @apply bg-gradient-to-r from-accent-blue to-accent-purple bg-clip-text text-transparent;
  }

  /* Glow effects */
  .glow-blue {
    box-shadow: 0 0 20px theme('colors.accent-blue / 30%');
  }

  .glow-purple {
    box-shadow: 0 0 20px theme('colors.accent-purple / 30%');
  }

  .glow-green {
    box-shadow: 0 0 20px theme('colors.accent-green / 30%');
  }

  /* Animation utilities */
  .animate-fade-in {
    animation: fadeIn 0.3s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.3s ease-out;
  }

  .animate-slide-down {
    animation: slideDown 0.3s ease-out;
  }

  /* Hide scrollbar but keep functionality */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Activity Heatmap styles */
.heatmap-cell {
  @apply rounded-sm transition-colors;
}

.heatmap-cell:hover {
  @apply ring-1 ring-white/50;
}

/* Form validation states */
.input-error {
  @apply border-red-500 focus:ring-red-500;
}

.input-success {
  @apply border-green-500 focus:ring-green-500;
}

/* Responsive typography */
@media (max-width: 640px) {
  .text-responsive-xl {
    @apply text-lg;
  }

  .text-responsive-2xl {
    @apply text-xl;
  }

  .text-responsive-3xl {
    @apply text-2xl;
  }
}

/* Print styles */
@media print {
  .no-print {
    display: none !important;
  }

  body {
    @apply bg-white text-black;
  }

  .glass-card,
  .card {
    @apply bg-white border-gray-300 shadow-none;
  }
}
